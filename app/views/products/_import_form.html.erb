<h3>Import New Products</h3>
<%= form_tag import_csv_products_path, multipart: true, class: "form" do %>
  <div class="form-group">
    <%= file_field_tag 'csv_file' %>
  </div>
  <div class="form-group">
    <label>
      Please Select Delimeter
      <%= select_tag 'delimeter', options_for_select(%w{| , ;}) %>
    </label>
  </div>
  <div class="checkbox">
    <label>
      <%= check_box_tag 'delete_records', true %>
      Delete Records which are not present in csv?
    </label>
  </div>
  <button type="submit" class="btn btn-default">Import</button>
<% end %>